{
  "expo": {
    "name": "Marga Drushti",
    "slug": "marga-drushti",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "margadrushti",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.guardianalert.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Marga Drushti needs camera access to detect obstacles and alert you when objects are too close.",
        "NSMotionUsageDescription": "Marga Drushti needs motion sensor access to count your steps."
      }
    },
    "android": {
      "package": "com.guardianalert.app",
      "adaptiveIcon": {
        "backgroundColor": "#007AFF",
        "foregroundImage": "./assets/images/icon.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": ["CAMERA", "ACTIVITY_RECOGNITION"]
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-web-browser",
      [
        "react-native-vision-camera",
        {
          "cameraPermissionText": "Marga Drushti needs camera access to detect obstacles and alert you when objects are too close.",
          "enableFrameProcessors": true,
          "disableFrameProcessorsOnPreview": false
        }
      ]
    ],
    "experiments": {
      "reactCompiler": true
    }
  }
}
